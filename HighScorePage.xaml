<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Pages.HighScorePage"
             Title="High Scores">
    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#202020}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Text="High Scores"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,30,0,20"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

            <CollectionView Grid.Row="1"
                            x:Name="HighScoresCollectionView"
                            Margin="20,0,20,0">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="No high scores yet."
                               FontSize="18"
                               TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.Header>
                    <Grid Padding="5" ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="Rank"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="1"
                               Text="Player"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="2"
                               Text="Score"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="3"
                               Text="Cards"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="4"
                               Text="Attempts"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="5"
                               Text="Time"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Label Grid.Column="6"
                               Text="Date"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="{Binding Rank}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="1"
                                   Text="{Binding PlayerName}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="2"
                                   Text="{Binding Score}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="3"
                                   Text="{Binding CardCount}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="4"
                                   Text="{Binding Attempts}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="5"
                                   Text="{Binding Time}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                            <Label Grid.Column="6"
                                   Text="{Binding Date}"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Grid.Row="2"
                    Text="Back to Main Menu"
                    WidthRequest="200"
                    HeightRequest="50"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="18"
                    Clicked="BackButton_Clicked"
                    Margin="0,20,0,30"
                    HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>