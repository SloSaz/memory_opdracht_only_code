<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Pages.GamePage"
             Title="Game">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Game Info Panel -->
            <Grid Grid.Row="0" BackgroundColor="#4CAF50" Padding="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="{Binding PlayerName}"
                       TextColor="White"
                       FontSize="18"
                       VerticalOptions="Center" />

                <StackLayout Grid.Column="1"
                             Orientation="Horizontal"
                             Margin="0,0,20,0"
                             VerticalOptions="Center">
                    <Label Text="Pairs: "
                           TextColor="White"
                           FontSize="16" />
                    <Label Text="{Binding RemainingPairs}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold" />
                    <Label Text="/"
                           TextColor="White"
                           FontSize="16" />
                    <Label Text="{Binding TotalPairs}"
                           TextColor="White"
                           FontSize="16" />
                </StackLayout>

                <StackLayout Grid.Column="2"
                             Orientation="Horizontal"
                             Margin="0,0,20,0"
                             VerticalOptions="Center">
                    <Label Text="Attempts: "
                           TextColor="White"
                           FontSize="16" />
                    <Label Text="{Binding Attempts}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold" />
                </StackLayout>

                <StackLayout Grid.Column="3"
                             Orientation="Horizontal"
                             VerticalOptions="Center">
                    <Label Text="Time: "
                           TextColor="White"
                           FontSize="16" />
                    <Label Text="{Binding GameTime}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold" />
                </StackLayout>
            </Grid>

            <!-- Cards Grid -->
            <ScrollView Grid.Row="1">
                <FlexLayout x:Name="CardsLayout"
                            Wrap="Wrap"
                            JustifyContent="SpaceEvenly"
                            AlignItems="Center"
                            Margin="10">
                </FlexLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>